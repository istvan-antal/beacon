{
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types" : ["node"]
    },
    "include": [
        "src/**/*"
    ]
}